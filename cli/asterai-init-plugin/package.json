{
  "name": "plugin",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "auth": "asterai auth",
    "gen:pkg": "mkdirp build && asterai_local pkg -o build/package.wasm -w build/package.wit -e http://localhost:3003",
    "gen:types": "jco guest-types build/package.wit -n plugin -o generated/",
    "compile": "tsc",
    "componentize": "jco componentize build/plugin.js -w build/package.wit -n plugin -o build/plugin.wasm",
    "build": "run-s gen:pkg gen:types compile componentize",
    "deploy": "asterai deploy"
  },
  "devDependencies": {
    "@asterai/cli": "latest",
    "@asterai/sdk": "latest",
    "@bytecodealliance/jco": "^1.9.1",
    "@types/node": "^22.13.4",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  }
}
